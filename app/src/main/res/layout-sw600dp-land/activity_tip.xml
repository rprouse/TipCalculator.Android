<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_tip_bill_amount_label"
            android:text="@string/activity_tip_bill_amount"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="8dp"
            android:layout_marginRight="36dp"
            android:background="@color/dark_blue"
            android:textColor="@color/light_text" />

        <TextView
            android:id="@+id/activity_tip_tip_per_person_label"
            android:text="@string/activity_tip_tip_per_person"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="6dp"
            android:padding="8dp"
            android:background="@color/dark_blue"
            android:textColor="@color/light_text" />

        <TextView
            android:id="@+id/activity_tip_tip_label"
            android:text="@string/activity_tip_tip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="8dp"
            android:background="@color/dark_blue"
            android:textColor="@color/light_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_tip_bill_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:inputType="numberDecimal"
            tools:text="9.99"
            android:ems="10"
            android:layout_margin="12dp" />

        <TextView
            android:id="@+id/activity_tip_tip_per_person"
            tools:text="9.99"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="12dp"
            android:paddingLeft="42dp"/>

        <TextView
            android:id="@+id/activity_tip_tip"
            tools:text="9.99"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="12dp"
            android:paddingLeft="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/activity_tip_percent_label"
            android:text="@string/activity_tip_percent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="6dp"
            android:padding="8dp"
            android:background="@color/dark_blue"
            android:textColor="@color/light_text" />

        <TextView
            android:id="@+id/activity_tip_split_label"
            android:text="@string/activity_tip_split"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="36dp"
            android:padding="8dp"
            android:background="@color/dark_blue"
            android:textColor="@color/light_text" />

        <TextView
            android:id="@+id/activity_tip_total_per_person_label"
            android:text="@string/activity_tip_total_per_person"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="6dp"
            android:padding="8dp"
            android:background="@color/dark_blue"
            android:textColor="@color/light_text" />

        <TextView
            android:id="@+id/activity_tip_total_label"
            android:text="@string/activity_total_tip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="8dp"
            android:background="@color/dark_blue"
            android:textColor="@color/light_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/activity_tip_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="12dp" />

        <Spinner
            android:id="@+id/activity_tip_split"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="12dp" />

        <TextView
            android:id="@+id/activity_tip_total_per_person"
            tools:text="9.99"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="12dp"
            android:paddingLeft="32dp" />

        <TextView
            android:id="@+id/activity_tip_total"
            tools:text="9.99"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="12dp"
            android:paddingLeft="12dp" />

    </LinearLayout>
        

</LinearLayout>
